.container {
    margin: 0 auto;
    max-width: 60ch;
    position: relative;
    border-radius: 8px;
    border: 1px solid #fff;
    /* Debug */
    padding: 3rem 0;
    outline: 2px solid red;
    min-height: 150px;
}

.container:hover {
    border: 1px dashed #f3bafd;
    border-dash-gap: 12px;
}

.container.selected {
    border: 1px solid #222;
}

.buttonContainer {
    display: flex;
    visibility: hidden;
    position: absolute;
    top: -30px;
    right: 0;
    gap: 8px;
}

.container:hover .buttonContainer {
    visibility: visible;
}

.content {
    margin-top: 20px;
}

/* Estilos responsivos */
@media (min-width: 768px) {
    .container {
        padding: 0 16px;
    }
}

@media (max-width: 767px) {
    .container {
        padding: 0 24px;
    }
}

.note {
    outline: 2px solid red;
    position: relative;

}
