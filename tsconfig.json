{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@client/*": ["src/client/*"],
      "@components/*": ["src/client/components/*"],
      "@contexts/*": ["src/client/contexts/*"],
      "@providers/*": ["src/shared/providers/*"],
      "@lib/*": ["src/domain/*"],
      "@modules/*": ["src/client/modules/*"],
      "@page/types/*": ["src/client/types/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
